<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECECEC">

    <androidx.cardview.widget.CardView
        android:id="@+id/character_select_item_cv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/character_select_item_photo_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/char_basic"
        app:layout_constraintTop_toTopOf="@id/character_select_item_cv"
        app:layout_constraintBottom_toBottomOf="@id/character_select_item_cv"
        app:layout_constraintStart_toStartOf="@id/character_select_item_cv"
        app:layout_constraintEnd_toEndOf="@id/character_select_item_cv"/>

</androidx.constraintlayout.widget.ConstraintLayout>