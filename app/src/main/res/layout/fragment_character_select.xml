<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/character_select_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/character_select_back_ib"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/img_arrow_left"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/character_select_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="캐릭터 커스텀"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/character_select_view"
        android:layout_width="0dp"
        android:layout_height="3px"
        android:layout_marginTop="10dp"
        android:background="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@id/character_select_ll"/>

    <ImageView
        android:id="@+id/character_select_character_iv"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/img_character_character"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/character_select_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="캐릭터 선택 탭"
        android:textSize="20sp"
        android:background="@drawable/button_round"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/character_select_character_iv"/>

    <ScrollView
        android:id="@+id/character_select_custom_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_select_button">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/character_select_custom_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>