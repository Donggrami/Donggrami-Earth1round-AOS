<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/signup_term_back_ic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="44dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/signup_term_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="22dp"
        android:text="약관 동의"
        android:textColor="@color/black"
        android:textSize="33sp"
        app:layout_constraintTop_toBottomOf="@+id/signup_term_back_ic"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/signup_term_menu_cv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_term_title_tv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signup_term_menu_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <CheckBox
                android:id="@+id/signup_term_agree_all_cb"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:button="@drawable/ic_round_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/signup_term_agree_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="약관 전체 동의"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/signup_term_agree_all_cb"
                app:layout_constraintTop_toTopOf="@id/signup_term_agree_all_cb"
                app:layout_constraintBottom_toBottomOf="@+id/signup_term_agree_all_cb"/>
            
            <View
                android:id="@+id/signup_term_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/signup_term_agree_all_cb"/>


            <CheckBox
                android:id="@+id/signup_term_service_cb"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:button="@drawable/ic_round_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/signup_term_view"/>

            <TextView
                android:id="@+id/signup_term_service_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="(필수)서비스 이용 약관"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/signup_term_service_cb"
                app:layout_constraintTop_toTopOf="@+id/signup_term_service_cb"
                app:layout_constraintBottom_toBottomOf="@+id/signup_term_service_cb"/>

            <ImageView
                android:id="@+id/signup_term_service_arrow_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_arrow_right_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/signup_term_service_cb"
                app:layout_constraintBottom_toBottomOf="@+id/signup_term_service_cb"/>



            <CheckBox
                android:id="@+id/signup_term_privacy_cb"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:button="@drawable/ic_round_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_term_service_cb"/>

            <TextView
                android:id="@+id/signup_term_privacy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="(필수)개인정보 처리 방침"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/signup_term_privacy_cb"
                app:layout_constraintTop_toTopOf="@+id/signup_term_privacy_cb"
                app:layout_constraintBottom_toBottomOf="@+id/signup_term_privacy_cb"/>

            <ImageView
                android:id="@+id/signup_term_privacy_arrow_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_arrow_right_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/signup_term_privacy_cb"
                app:layout_constraintBottom_toBottomOf="@+id/signup_term_privacy_cb"/>



            <CheckBox
                android:id="@+id/signup_term_location_cb"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="20dp"
                android:button="@drawable/ic_round_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_term_privacy_cb"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/signup_term_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="(필수)위치기반 서비스"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/signup_term_location_cb"
                app:layout_constraintTop_toTopOf="@+id/signup_term_location_cb"
                app:layout_constraintBottom_toBottomOf="@+id/signup_term_location_cb"/>

            <ImageView
                android:id="@+id/signup_term_location_arrow_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_arrow_right_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/signup_term_location_cb"
                app:layout_constraintBottom_toBottomOf="@+id/signup_term_location_cb"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/signup_term_ok_cv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/light_gray"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signup_term_ok_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/signup_term_ok_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="확인"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>