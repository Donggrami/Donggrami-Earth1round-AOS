<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/character_calender_back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="뒤로가기"
        android:background="@drawable/button_round"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character_calender_month_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="7월"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/character_calender_left_tv"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginStart="70dp"
        android:src="@drawable/img_arrow_left"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/character_calender_month_tv"
        app:layout_constraintBottom_toBottomOf="@id/character_calender_month_tv"/>

    <ImageButton
        android:id="@+id/character_calender_right_tv"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginEnd="70dp"
        android:src="@drawable/img_arrow_right"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/character_calender_month_tv"
        app:layout_constraintBottom_toBottomOf="@id/character_calender_month_tv"/>

    <FrameLayout
        android:id="@+id/character_calender_day_fl"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:background="#808080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/character_calender_month_tv"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/character_calender_cumulate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="누적 걸음 수"
        android:background="@drawable/button_round"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/character_calender_day_fl"/>

</androidx.constraintlayout.widget.ConstraintLayout>