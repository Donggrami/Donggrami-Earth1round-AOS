<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECECEC"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/character_prize_item_left"
        android:layout_width="30dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/style_prize_left_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/character_prize_item_right"
        android:layout_width="30dp"
        android:layout_height="130dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/style_prize_right_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/character_prize_item_cv"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/character_prize_item_year_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="2022"
        android:textColor="#5D5D5D"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/character_prize_item_cv"
        app:layout_constraintTop_toTopOf="@id/character_prize_item_cv"/>

    <TextView
        android:id="@+id/character_prize_item_month_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="May"
        android:textColor="#5D5D5D"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/character_prize_item_cv"
        app:layout_constraintTop_toBottomOf="@id/character_prize_item_year_tv"/>

    <TextView
        android:id="@+id/character_prize_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=". 01"
        android:textColor="#5D5D5D"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/character_prize_item_month_tv"
        app:layout_constraintTop_toBottomOf="@id/character_prize_item_year_tv"/>

    <TextView
        android:id="@+id/character_prize_item_course_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="코스"
        android:textColor="#5D5D5D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/character_prize_item_cv"
        app:layout_constraintBottom_toTopOf="@id/character_prize_item_distance_tv"/>

    <TextView
        android:id="@+id/character_prize_item_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:text="거리 km"
        android:textColor="#4591FF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/character_prize_item_cv"
        app:layout_constraintBottom_toBottomOf="@id/character_prize_item_cv"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/character_prize_item_cv"/>

</androidx.constraintlayout.widget.ConstraintLayout>