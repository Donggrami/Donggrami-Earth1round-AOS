<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/character_prize_back_ib"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/character_prize_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 기록"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/character_prize_back_ib"/>

        <View
            android:id="@+id/character_prize_view"
            android:layout_width="0dp"
            android:layout_height="3px"
            android:layout_marginTop="10dp"
            android:background="#D3D3D3"
            app:layout_constraintTop_toBottomOf="@id/character_prize_back_ib"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/character_prize_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/character_prize_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>